<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>

<?import javafx.scene.layout.GridPane?>
<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.contactsapp.controller.DialogController">


    <content>
        <GridPane hgap="10" vgap="10">
            <Label text="Name: " GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Label text="Surname: " GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <Label text="Phone number: " GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <Label text="Comment: " GridPane.rowIndex="3" GridPane.columnIndex="0"/>

            <TextField  GridPane.rowIndex="0" GridPane.columnIndex="1" fx:id="nameField">
                <tooltip>
                    <Tooltip text="You must fill this field"/>
                </tooltip>
            </TextField>
            <TextField GridPane.rowIndex="1" GridPane.columnIndex="1" fx:id="surnameField">
                <tooltip>
                    <Tooltip text="You must fill this field"/>
                </tooltip>
            </TextField>
            <TextField GridPane.rowIndex="2" GridPane.columnIndex="1" fx:id="phoneField">
                <tooltip>
                    <Tooltip text="You must fill this field"/>
                </tooltip>
            </TextField>
            <TextField GridPane.rowIndex="3" GridPane.columnIndex="1" fx:id="commentField"/>
        </GridPane>

    </content>
</DialogPane>
