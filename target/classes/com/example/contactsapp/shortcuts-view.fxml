<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.contactsapp.controller.DialogController">
    <content>

        <GridPane hgap="50" vgap="10" alignment="CENTER">
            <TextField text="F1" GridPane.columnIndex="0" GridPane.rowIndex="0" editable="false" alignment="CENTER" maxWidth="50"/>
            <Label text="Add a new contact" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <TextField text="F2" GridPane.columnIndex="0" GridPane.rowIndex="1" editable="false" alignment="CENTER" maxWidth="50"/>
            <Label text="Edit a contact" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <TextField text="SUPR" GridPane.columnIndex="0" GridPane.rowIndex="2" editable="false" alignment="CENTER" maxWidth="50"/>
            <Label text="Delete a contact" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <TextField text="F12" GridPane.columnIndex="0" GridPane.rowIndex="3" editable="false" alignment="CENTER" maxWidth="50"/>
            <Label text="Exit application" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <TextField text="F11" GridPane.columnIndex="0" GridPane.rowIndex="4" editable="false" alignment="CENTER" maxWidth="50"/>
            <Label text="Toggle fullscreen" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        </GridPane>

    </content>

</DialogPane>
